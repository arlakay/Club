<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp">

    <LinearLayout
        android:id="@+id/layout_store_atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="BOTTLE KEEPING"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_store_atas" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan Bottle QR Code"/>

                        <ImageView
                            android:id="@+id/img_bottleqr_keep_valid"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_valid"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_bottleqr_keep_wrong"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wrong"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <EditText
                            android:id="@+id/et_store_bottle_qrcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bottle QR Code"
                            android:singleLine="true"
                            android:layout_weight="0.1"
                            android:imeOptions="actionDone"/>
                        <ImageButton
                            android:id="@+id/btn_store_scan_bottle_qrcode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.9"
                            android:src="@drawable/ic_qr_scanner"
                            android:background="@null"
                            android:scaleType="centerInside"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_store_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_gravity="center_horizontal"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:background="@drawable/button_rounded"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>